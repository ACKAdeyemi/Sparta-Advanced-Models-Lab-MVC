<p id="notice"><%= notice %></p>

<h1>Paragraphs</h1>

<table>
  <thead>
    <tr>
      <th class="col-md-8">Lorem</th>
      <th class="col-md-2">Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paragraphs.each do |paragraph| %>
      <tr>
        <td><%= paragraph.lorem %></td>
        <td><%= paragraph.chapter_id %></td>
        <td><%= link_to 'Show', paragraph %></td>
        <td><%= link_to 'Edit', edit_paragraph_path(paragraph) %></td>
        <td><%= link_to 'Destroy', paragraph, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paragraph', new_paragraph_path %>
